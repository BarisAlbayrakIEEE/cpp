re='(.*)[0-9]+(.*)'
while [[ $hello =~ $re ]]; do
  hello=${BASH_REMATCH[1]}${BASH_REMATCH[2]}
done
echo "$hello"




function filemod(){
  cat $1 > file
  re='(.*)[0-9]+(.*)'
  while [[ $hello =~ $re ]]; do
    hello=${BASH_REMATCH[1]}${BASH_REMATCH[2]}
  done

}





